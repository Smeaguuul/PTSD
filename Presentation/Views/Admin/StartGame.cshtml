@using DTO
@{
	ViewData["Title"] = "Start kamp";
}
<div class="text-center">
	<h1 class="display-4">Start kamp på bane @ViewBag.FieldId</h1>
</div>
@foreach (var i in ViewBag.Matches)
{
	if (i.Status == Status.Scheduled)
	{
		<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Admin", new{fieldId=ViewBag.FieldId, matchId=@i.Id})'">
			<table>
				<tr>
					<td>
						@i.Team1.Club.Name
					</td>
					<td>
						-
					</td>
					<td>
						@i.Team2.Club.Name
					</td>
				</tr>
				<tr>
					<td>
						@i.Team1.Players[0].Name
					</td>
					<td>
						-
					</td>
					<td>
						@i.Team2.Players[0].Name
					</td>
				</tr>
				<tr>
					<td>
						@i.Team1.Players[1].Name
					</td>
					<td>
						-
					</td>
					<td>
						@i.Team2.Players[1].Name
					</td>
				</tr>
			</table>
		</button>
	}
}