@{
	ViewData["Title"] = "Admin";
}
<div style="text-align: center;">
    <h1>Redigér kampe</h1>
    @foreach (var i in ViewBag.fields)
    {
        <div style="margin: 20px auto; border: 2px solid gray; border-radius: 5px; padding: 20px; width: 50vh;">
            <h4>Bane @i.Id</h4>
            @if (@i.CurrentMatch == null)
            {
                <p>Status: Ledig</p>
                <div class="button-container">
                    <button asp-action="StartGame" asp-route-fieldId=@i.Id id="startMatchBtn+@i.Id" class="btn" style="background-color: #003A29; color: white; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer;">Start Kamp</button>
                </div>
            }
            else
            {
                <p>Status: Optaget</p>
                <div class="button-container">
                    <button asp-action="EndMatchBtn" asp-route-matchId=@i.CurrentMatch.Id id="endMatchBtn+@i.Id" class="btn" style="background-color: #003A29; color: white; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer;">Slut Kamp</button>
                </div>
            }
        </div>
    }
</div>
