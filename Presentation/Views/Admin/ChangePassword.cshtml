<div>
	<form method="post" action="@Url.Action("ChangePassword", "Admin")">
		<input type="password" name="oldPassword" placeholder="Nuværende adgangskode" />
		<input type="password" name="newPassword" placeholder="Ny adgangskode" />
		<button type="submit">Skift adgangskode</button>
	</form>
	@if (ViewBag.Message != null)
	{
		<p style="color:green;">@ViewBag.Message</p>
	}
	@if (ViewBag.Error != null)
	{
		<p style="color:red;">@ViewBag.Error</p>
	}
</div>