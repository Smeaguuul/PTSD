@model DTO.MatchScore
@{
	var id = Context.Request.Query["Id"].ToString();
}
<div class="container">
	<h1>Match Details</h1>
	<div class="card">
		<div class="card-header">
			<h2>@Model.NameHome vs @Model.NameAway</h2>
			<small class="text-muted">Field ID: @Model.FieldId</small>
		</div>
		<div class="card-body">
			<h3>Players</h3>
			<div class="row">
				<div class="col-md-6">
					<h4>Home Team Players</h4>
					<ul>
						@foreach (var player in Model.HomePlayers)
						{
							<li>@player</li>
						}
					</ul>
				</div>
				<div class="col-md-6">
					<h4>Away Team Players</h4>
					<ul>
						@foreach (var player in Model.AwayPlayers)
						{
							<li>@player</li>
						}
					</ul>
				</div>
			</div>

			<h3>Match Stats</h3>
			<table>
				<thead>
					<tr>
						<th>Sets</th>
						<th>Games This Set</th>
						<th>Points</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>@Model.SetsHome - @Model.SetsAway</td>
						<td>@Model.GamesThisSetHome - @Model.GamesThisSetAway</td>
						<td class="points">@Model.PointsHome - @Model.PointsAway</td>
					</tr>
				</tbody>
			</table>

			<form method="post" action="@Url.Action("index", "PointManager")">
				<input type="hidden" name="matchId" value="@id" />

				<div class="buttonsDiv">
					<button type="submit" class="scoreButton" name="pointScorer" value="true">Home Team Scored</button>
					<button type="submit" class="scoreButton" name="pointScorer" value="false">Away Team Scored</button>
				</div>
			</form>
		</div>
	</div>
</div>
