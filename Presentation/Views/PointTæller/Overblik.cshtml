@model List<DTO.Match>

@{
    ViewData["Title"] = "Kampoversigt";
}

<h2 style="margin-bottom: 20px;">Aktive kampe</h2>

<table style="width: 100%; max-width: 600px; margin: auto; border-collapse: collapse; font-size: 18px;">
    <thead>
        <tr style="background-color: #f0f0f0;">
            <th style="padding: 10px; text-align: left;">Modstander</th>
            <th style="padding: 10px; text-align: left;">Bane</th>
            <th style="padding: 10px; text-align: left;">Link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kamp in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 10px;">@kamp.Opponent.Name</td>
                <td style="padding: 10px;">@kamp.Field</td>
                <td style="padding: 10px;">
                    <a href="@Url.Action("Index", "PointTæller", new { id = kamp.Id })">
                        Se pointtæller
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
